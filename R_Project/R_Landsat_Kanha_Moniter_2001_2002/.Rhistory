# -----------------------------
# 1. Load libraries
# -----------------------------
library(tidyverse)
# -----------------------------
# 1. Load libraries
# -----------------------------
library(tidyverse)
library(zoo)
library(lubridate)
# -----------------------------
# 2. Set input & output folders
# -----------------------------
input_dir  <- "D:\Landsat_Kanha_Moniter_2001_2002\Data_Table\data_raw"
output_dir <- "D:\Landsat_Kanha_Moniter_2001_2002\Data_Table\data_interpolated"
# Create output folder if not exists
if (!dir.exists(output_dir)) {
dir.create(output_dir)
}
# -----------------------------
# 3. Get all CSV files
# -----------------------------
csv_files <- list.files(input_dir,
pattern = "\\.csv$",
full.names = TRUE)
# -----------------------------
# 4. Loop over each CSV file
# -----------------------------
for (file in csv_files) {
cat("Processing:", basename(file), "\n")
# -------------------------
# Read CSV
# -------------------------
ndvi <- read.csv(file)
# -------------------------
# Convert date column
# -------------------------
ndvi$date <- as.Date(ndvi$date)
# Sort by date
ndvi <- ndvi %>% arrange(date)
# -------------------------
# Create 5-day timeline
# -------------------------
start_date <- min(ndvi$date)
end_date   <- max(ndvi$date)
date_5day <- seq(from = start_date,
to   = end_date,
by   = "5 days")
ndvi_5day <- data.frame(date = date_5day)
# -------------------------
# Merge original NDVI
# -------------------------
ndvi_merge <- merge(ndvi_5day,
ndvi[, c("date", "median_ndvi")],
by = "date",
all.x = TRUE)
# -------------------------
# Linear interpolation
# -------------------------
ndvi_merge$ndvi_interp <- na.approx(
ndvi_merge$median_ndvi,
x = ndvi_merge$date,
na.rm = FALSE
)
# -------------------------
# Add year, month, day
# -------------------------
ndvi_merge$year  <- year(ndvi_merge$date)
ndvi_merge$month <- month(ndvi_merge$date)
ndvi_merge$day   <- day(ndvi_merge$date)
# -------------------------
# Save output CSV
# -------------------------
out_name <- paste0(
tools::file_path_sans_ext(basename(file)),
"_5day_interpolated.csv"
)
write.csv(ndvi_merge,
file.path(output_dir, out_name),
row.names = FALSE)
cat("Saved:", out_name, "\n\n")
}
